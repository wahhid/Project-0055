<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <!-- Import Gondola Wizard form -->
        <record id="view_import_gondola" model="ir.ui.view">
            <field name="name">import.gondola.form</field>
            <field name="model">import.gondola</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Import Product">
                    <group>
                        <field name="name" />
                        <field name="delimeter"/>
                        <field name="data" filename="name"/>
                    </group>
                    <separator string="" colspan="4"/>
                    <footer>
                        <button class="oe_highlight" name="action_import" string="Import" type="object"/>
                        <button class="oe_link" special="cancel" string="Cancel"/>
                    </footer>
               </form>
            </field>
        </record>

        <!--  Action of Import Gondola wizard -->

        <record id="action_import_gondola" model="ir.actions.act_window">
            <field name="name">Import Bin</field>
            <field name="res_model">import.gondola</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
           <field name="view_id" ref="view_import_gondola"/>
           <field name="target">new</field>
        </record>

        <menuitem
            action="action_import_gondola" id="menu_gondola_import" 
            name="Bin Import"
            parent="menu_stock_opname_import"
            groups="stock.group_stock_manager" sequence="2"/>
    </data>
</openerp>